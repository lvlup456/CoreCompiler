ADD:
   dest = ope1 + ope2
   Warning:
      - ope1 + ope2 > sizeof(int32)
      - sign(ope1) != sign(ope2)

ORR dest = ope1 or ope2

EOR dest = ope1 xor ope2
AND dest = ope1 and ope2
ADC dest = ope1 + ope2 + carry 
CMP See section on CMP (2.5.5) 
SUB dest = ope1 − ope2
SBC dest = ope1 − ope2 + carry − 1 
MOV dest = ope2
LSH dest = ope1 << ope2
RSH dest = ope1 >> ope2